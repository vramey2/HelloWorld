<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background= "@color/pink"
    android:id="@+id/parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Hello from Veronika!"
        android:textSize="30sp"
          />

    <TextView
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Click to change text color"
        android:textSize="20sp"
        android:background="#969eff"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
          />

    <TextView
        android:id="@+id/changeBackgroundButton"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="#969eff"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:text="Click to change background color" />

    <TextView
        android:id="@+id/changeTextButton"
        android:layout_above="@+id/changeBackgroundButton"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="#969eff"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:text="Click to change text" />

    <EditText
        android:id="@+id/editTextButton"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/changeTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:hint="Create your own text!" />

    <TextView
        android:id="@+id/changeCustomTextButton"
        android:layout_above="@+id/editTextButton"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="#969eff"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:text="Click to change to custom text" />
</RelativeLayout>